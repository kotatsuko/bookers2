<div class='container px-5 px-sm-0'>
  <div class='row'>

    <%= render "books/user_info",user:@user,book:@book %>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>

      <table class='table'>
  		  <tr>
          <td>
            <%= link_to user_path(@booksh.user_id) do %>
            <%= image_tag @booksh.user.get_profile_image(100,100) %><br><%= @booksh.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@booksh.id) do %>
            <%= @booksh.title %>
            <% end %>
          </td>
          <td>
            <%= @booksh.body %>
          </td>
          <% if @booksh.user==current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@booksh.id),class:"btn btn-sm btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy" ,book_path(@booksh.id),method: :delete,class:"btn btn-sm btn-danger","data-confirm" => "本当に消しますか？" %>
          </td>
          <% end %>
        </tr>
      </table>

    </div>
  </div>
</div>



